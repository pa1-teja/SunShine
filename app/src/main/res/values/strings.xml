<resources xmlns:xliff="http://schemas.android.com/apk/res-auto">
    <string name="app_name">SunShine</string>

    <!--settings menu items-->
    <string name="action_settings" translatable="false">Settings</string>
    <string name="action_refresh" translatable="false">Refresh</string>
    <string name="action_maps" translatable="true">Location on Maps</string>
    <string name="title_activity_detail">DetailActivity</string>
    <string name="share_menu_item_title">Share</string>

    <!--location preference strings for settingsActivity-->
    <string name="pref_location_key" translatable="false">location</string>
    <string name="pref_location_header" translatable="true">Location</string>
    <string name="pref_location_default">hyderabad</string>

    <!--temperature preference strings for settingsActivity-->
    <string name="pref_temperature_header">Temperature Units</string>
    <string name="pref_temperature_key" translatable="false">temp_units</string>
    <string name="pref_temperature_default" translatable="false">imperial</string>

    <string name="pref_temperature_unit_imperial">imperial</string>
    <string name="pref_temperature_unit_metric">metric</string>

    <array name="pref_temperature_text">
        <item>@string/pref_temperature_unit_imperial</item>
        <item>@string/pref_temperature_unit_metric</item>
    </array>

    <array name="pref_temperature_values">
        <item>@string/pref_temperature_unit_imperial</item>
        <item>@string/pref_temperature_unit_metric</item>
    </array>


    <!--Date label when displaying today's weather forecast [CHAR LIMIT=20]-->
    <string name="today">Today</string>

    <!--Date label when displaying tomorrow's weather forecast [CHAR LIMIT=20]-->
    <string name="tomorrow">Tomorrow</string>

    <!--Date format dor displaying day of week and date (i.e. Mon Jun 1) [CHAR LIMIT=20]-->
    <string name="format_full_friendly_date"><xliff:g id="day">%1$s</xliff:g>,<xliff:g id="date">%2$s</xliff:g></string>

    <!--Temperature formats-->
    <string name="format_temperature"><xliff:g id="temp">%1.0f</xliff:g>\u00B0</string>


    <!--Windspeed formats-->
    <!--Wind in mph [CHAR LIMIT=25]-->
    <string name="format_wind_mph">Wind: <xliff:g id="speed">%1$1.0f</xliff:g> mph <xliff:g id="direction">%2$s</xliff:g> </string>
    <!--Wind in kph [CHAR LIMIT=25]-->
    <string name="format_wind_kph">Wind: <xliff:g id="speed">%1$1.0f</xliff:g> km/h <xliff:g id="direction">%2$s</xliff:g></string>

    <!--Pressure format [CHAR LIMIT=25]-->
    <string name="format_pressure">Pressure: <xliff:g id="pressure">%1.0f</xliff:g> hPa</string>

    <!--Humidity format [CHAR LIMIT=25]-->
    <string name="format_humidity">Humidity: <xliff:g id="humidity">%1.0f</xliff:g> %%</string>
</resources>
